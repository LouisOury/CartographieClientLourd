                <TextBox x:Name="txtBoxUrl" Grid.Column="1" Grid.Row="7" Text="{Binding ElementName=dgClient, Path=SelectedItem.Url_Site, Mode=TwoWay}" />
                <ComboBox x:Name="comboBoxCat" Grid.Column="1" Grid.Row="8" ItemsSource="{Binding ElementName=windMain, Path=DataContext.DbCategorie}"
